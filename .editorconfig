# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Configurations applied to all files
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2

# Remove unused whitespace
trim_trailing_whitespace = true